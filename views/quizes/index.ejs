<form method="get" action="/quizes">
	<fieldset>
	<legend>Buscar preguntas</legend>	
		<br/>
		<p><input type="text" name="buscar" placeholder="Texto a buscar" />
		<input type="submit" value="Enviar" /></p>
		<br/>
	</fieldset>
</form>
<br/>
<table>
<tr><th>Lista de preguntas</th></tr>
  <% var i; for (i=0; i < quizes.length; i++) { %>        
     <tr><td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
	 <td><a href="quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a></td>
	 <td><form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
		 <button type="submit" onClick="return confirm('Borrar pregunta: <%= quizes[i].pregunta %>??');">Borrar</button>
		 </form></td></tr>
  <% } %>
</table>
<br/>
<a href="/quizes/new"><button type="button" id="btnCrear">Crear pregunta</button></a>